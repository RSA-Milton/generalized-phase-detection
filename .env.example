# Copie este archivo a .env y modifique las rutas según su configuración

# Rutas del proyecto:
GPD_GIT_ROOT=/path/to/git/
GPD_LOCAL_ROOT=/path/to/projects/gpd/

# Subdirectorios:
GPD_MODELS_DIR=${GPD_GIT_ROOT}/models
GPD_DATA_DIR=${GPD_LOCAL_ROOT}/data

# Opcional:
GPD_TEMP_DIR=${GPD_LOCAL_ROOT}/temp

# Modelo por defecto:
GPD_DEFAULT_MODEL=gpd_v2.keras

# Subdirectorios específicos para nueva estructura:
# Raw data subdirectories
GPD_RAW_MSEED_DIR=${GPD_DATA_DIR}/raw/mseed
GPD_RAW_MSEED_CONTINUOS_DIR=${GPD_RAW_MSEED_DIR}/continuos
GPD_RAW_MSEED_EVENTS_DIR=${GPD_RAW_MSEED_DIR}/events
GPD_RAW_MSEED_WAVEFORMS_DIR=${GPD_RAW_MSEED_DIR}/waveforms
GPD_RAW_MSEED_LEGACY_DIR=${GPD_RAW_MSEED_DIR}/legacy
GPD_RAW_DATASETS_DIR=${GPD_DATA_DIR}/raw/datasets

# Processed data subdirectories
GPD_PROCESSED_MSEED_DIR=${GPD_DATA_DIR}/processed/mseed
GPD_PROCESSED_MSEED_CONTINUOS_DIR=${GPD_PROCESSED_MSEED_DIR}/continuos
GPD_PROCESSED_MSEED_EVENTS_DIR=${GPD_PROCESSED_MSEED_DIR}/events
GPD_PROCESSED_DATASETS_DIR=${GPD_DATA_DIR}/processed/datasets

# Results subdirectories
GPD_RESULTS_GPD_DIR=${GPD_DATA_DIR}/results/gpd
GPD_RESULTS_GPD_KERAS_DIR=${GPD_RESULTS_GPD_DIR}/keras
GPD_RESULTS_GPD_LEGACY_DIR=${GPD_RESULTS_GPD_DIR}/legacy
GPD_RESULTS_GPD_TFLITE_DIR=${GPD_RESULTS_GPD_DIR}/tflite
GPD_RESULTS_STALTA_DIR=${GPD_DATA_DIR}/results/stalta
GPD_RESULTS_COMPARISONS_DIR=${GPD_DATA_DIR}/results/comparisons

# Analysis subdirectories
GPD_ANALYSIS_PERFORMANCE_DIR=${GPD_DATA_DIR}/analysis/performance
GPD_ANALYSIS_STATISTICS_DIR=${GPD_DATA_DIR}/analysis/statistics
GPD_ANALYSIS_PLOTS_DIR=${GPD_DATA_DIR}/analysis/plots

# Example paths:
# GPD_DATA_DIR=/home/user/seismic_data/gpd
# GPD_DATA_DIR=/mnt/storage/research/gpd_data
# GPD_DATA_DIR=D:/Research/GPD/data